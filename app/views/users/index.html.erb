<div class="user_datatable">
<table class="table table-striped table-hover " id = "users">
<thead>
  <tr>
    <th>Picture</th>
    <th>Name <i class="fa fa-arrows-v"></i></th>
    <th>Email <i class="fa fa-arrows-v"></i></th>

  </tr>
</thead>
  <tbody>

<% @all_users.each do |user| %>
  
  <tr>
  <td>
  <% if !user.user_img_url.include? "https://secure.gravatar.com/avatar" %>
    <img src=<%= user.user_img_url %> width="48">
  <%else%>
 <img src=<%="http://www.etceter.com/assets/43b442c6/no_avatar_available.jpg"
 %> width="48">

  <% end %>
  </td>
  <td><%= (link_to  user.name.titleize, "/see_user_list/#{user.name}") if user.name  %></td>
      <td> <%= user.email %></td>



    </tr>

  <% end %>
     </tbody>
</table>
</div>
<br><br>
<br><br>




<script>



$('#users').DataTable({

      autoWidth: false,
      pagingType: 'full_numbers',
      iDisplayLength: 50
});
</script>
