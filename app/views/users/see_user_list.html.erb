<img src="<%= User.find(params["name"]).user_img_url %>">
<h3><%= "#{User.find(params["name"]).name.titleize}'s Bucketlist:"%></h3>
<br>

<%= 'List is empty.' if @user_todos.empty?  %>

<% @user_todos.each do |todo| %>

  <a href=<%= "/todos/#{todo.id}" %>><img src="<%= todo.check_fo_image %>" height="90" width="90"></a>
  <%= link_to  "Comment on #{todo.name}".html_safe, "/users_with_this_todo/#{todo.id}"  %>

<br><br><br>
<% end %>
