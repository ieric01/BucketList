






<div id='background_img'>
  <%#<body STYLE="background-image: url(c4.jpg)" width= 20%, height= 15px>text</body>%>
</div>
<div class="site_headline">

  <style>
@-webkit-keyframes typing { from { width: 0; } }
@-webkit-keyframes blink-caret { 50% { border-color: transparent; } }

h1 {
      text-align: center;
	font: bold 200% Consolas, Monaco, monospace;
	border-right: .1em solid;
	width: 16.5em; /* fallback */
	width: 30ch; /* # of chars */
  margin-left: 29%;
	white-space: nowrap;
	overflow: hidden;
	-webkit-animation: typing 3s steps(30, end), /* # of steps = # of chars */
	           underscore .5s step-end infinite alternate;
}
  </style>




  <h1>Live Your Dreams</h1>
  <h4><%= User.count %> Members are tracking over <%= Todo.count %> Goals</h4>

  <br>
  <% if !current_user %>
  <a href="/auth/guest_login"  class="btn btn-primary">Demo Login</a>
  <% end %>
  <div>

  <% if flash['alert'] %>
    <div class="alert"><div id='red'><%= flash['alert'] %></div></div>
  <% end %>

<div class="container">
  <div class="row">

    <div id="content" class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <%= form_tag("/search", :method => "get", :enforce_utf8 => false) do %>
        <div class="field">
          <%= text_field_tag :name, nil, {:placeholder => 'What do you want to do?', :size => 60 } %>
        </div>
      <% end %>
      <div class="error"><%= @error if @error %></div>
    </div><!-- #content -->
  </div><!--.row -->
</div>




